<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:columnCount="2"
    android:rowCount="3"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButtonCat"
        android:layout_width="174dp"
        android:layout_height="138dp"
        android:layout_row="0"
        android:layout_column="0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cat" />

    <ImageButton
        android:id="@+id/imageButtonChicken"
        android:layout_width="202dp"
        android:layout_height="135dp"
        android:layout_row="0"
        android:layout_column="1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/chicken" />

    <ImageButton
        android:id="@+id/imageCow"
        android:layout_width="173dp"
        android:layout_height="162dp"
        android:layout_row="1"
        android:layout_column="0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/cow" />

    <ImageButton
        android:id="@+id/imageButtonDog"
        android:layout_width="204dp"
        android:layout_height="160dp"
        android:layout_row="1"
        android:layout_column="1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/dog" />

    <ImageButton
        android:id="@+id/imageButtonDuck"
        android:layout_width="167dp"
        android:layout_height="162dp"
        android:layout_row="2"
        android:layout_column="0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/duck" />

    <ImageButton
        android:id="@+id/imageButtonSheep"
        android:layout_width="204dp"
        android:layout_height="164dp"
        android:layout_row="2"
        android:layout_column="1"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sheep" />
</GridLayout>
